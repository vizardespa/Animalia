<!DOCTYPE html>
<html lang="es">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Animalia</title>
        <link href="~/logoSoloChico.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@
        <style>
            .gridTable {margin: 5px;padding: 10px;border: 1px #c8c8c8 solid;border-collapse: collapse;--min-width: 550px; background-color: #fff;color: #fff;}
            .gridHead th{font-weight: bold;background-color: #030D8D;color: #fff;padding: 10px}
            .gridHead a:link,.gridHead a:visited,.gridHead a:active,.gridHead a:hover {color: #fff;}
            .gridHead a:hover {text-decoration:underline;}
            .gridTable tr.gridAltRow{background-color: #efeeef;}
            .gridTable tr:hover{background-color: #ffa500	;}
            .gridAltRow td{padding: 10px;margin: 5px; color: #333;}
            .gridRow td{padding: 10px;color: #333;}
            .gridFooter td{padding: 10px; background-color: #c7d1d6;color: #999;font-size: 12pt;text-align: center;}
            .gridFooter a{font-weight: bold;color: #333; border: 1px #333 solid;}
        </style>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        <link rel="stylesheet" type="text/css" href="/Content/jquery-ui.css"/>
        <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
        <script src="/Scripts/jquery-1.4.4.js" type="text/javascript"></script>
        <script src="/Scripts/jquery.numeric.js" type="text/javascript"></script>
        <script src="/Scripts/jquery-ui.js" type="text/javascript"></script>
        <script src="/Scripts/jquery.validate.min.js" type="text/javascript"></script>
        <script src="/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
        <script src="/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>

        <style type="text/css">
        .bgimgIndex {
            background-image: url(../light-blue-halftone.png);
            background-color:white;
            background-size:cover;
            background-repeat:no-repeat;
            background-position-x:center;
        }
        .bgimgIndex {
            background-image: url(../light-blue-halftone.png);
            background-color:white;
            background-size:cover;
            background-repeat:no-repeat;
            background-position-x:center;
            background-position-y: -75px;
        }
        </style>

        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body class="bgimgIndex">
        <header>
            <div class="content-wrapper">
                <div class="float-left">
@*                    <p class="site-title">@Html.ActionLink("su logotipo aquí", "Index", "Home") </p>*@
                    <img id="logo" src="~/palLogo.png" width="150px" height="75px"/> 
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                            <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                            <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Vertebrados", "Index", "Vertebrados")</li>
                            <li>@Html.ActionLink("Invertebrados", "Index", "Invertebrados")</li>
                            <li>@Html.ActionLink("Protozoarios", "Index", "Protozoarios")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body" class="bgimgIndex">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - CETYS Universidad</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>